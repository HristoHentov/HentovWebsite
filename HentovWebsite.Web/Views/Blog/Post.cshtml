@using HentovWebsite.Utility
@model HentovWebsite.Models.View.Blog.PostViewModel

@{
    ViewBag.Title = "Post";
}

<div class="container">
    <div class="col-md-12">
        <h1>@Model.Title</h1>
        <p>@Model.Content</p>
        <div>
            <span class="badge">Posted @Model.DatePosted</span><div class="pull-right">
            </div>
        </div>
        <hr>
    </div>
</div>

<p>
    @Html.ActionLink(@WebText.BlogBackTo, "Index", null, new { @class = "btn btn-submit" })
</p>