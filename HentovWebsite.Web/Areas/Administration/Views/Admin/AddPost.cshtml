@model HentovWebsite.Models.View.Blog.PostViewModel

@{
    ViewBag.Title = "Add Post - Hentov.NET";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-5">
            <div style="margin: auto">
                @using (Html.BeginForm("AddPost", "Blog", new {area = ""} ,FormMethod.Post ,new {@class = "form-horizontal"}))
                {
                    <div class="form-group">
                        @Html.LabelFor(x => x.Title)
                        <div>
                            @Html.EditorFor(x => x.Title)
                            @Html.ValidationMessageFor(x => x.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Content)
                        <div>
                            @Html.EditorFor(x => x.Content)
                            @Html.ValidationMessageFor(x => x.Title)
                        </div>
                    </div>
                    @Html.Hidden("AuthorName", User.Identity.Name)
                    
                    <button type="submit" class="btn btn-submit">Add Post</button>
                }
            </div>
        </div>
    </div>
</div>

